#!/bin/sh

if [ "$#" -eq 0 ]
then
	exec sendmail -oi corecode+drafts@fs.ei.tum.de
else
	cnt=1
	for f
	do
		printf "\rSending [%d/%d] ... " "$cnt" "$#"

		if [ ! -f "$f" ]
		then
			printf "\nerror: '%s' is no valid file\n" "$f"
			exit 1
		fi

		"$0" < "$f"
		cnt=$(($cnt + 1))
	done
	printf "done.\n"
fi
